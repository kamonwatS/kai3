@page
@model TodoApp.Pages.Todos.DeleteModel
@{
    ViewData["Title"] = "Delete Todo";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>Delete Todo</h1>

            <div class="alert alert-warning">
                <h4>Are you sure you want to delete this todo?</h4>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        @Model.Todo.Title
                        @if (Model.Todo.IsCompleted)
                        {
                            <span class="badge bg-success ms-2">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning ms-2">Pending</span>
                        }
                    </h5>
                    
                    @if (!string.IsNullOrEmpty(Model.Todo.Description))
                    {
                        <p class="card-text">@Model.Todo.Description</p>
                    }
                    
                    <div class="text-muted">
                        <small>
                            <strong>Created:</strong> @Model.Todo.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                        </small>
                        <br />
                        @if (Model.Todo.CompletedAt.HasValue)
                        {
                            <small>
                                <strong>Completed:</strong> @Model.Todo.CompletedAt.Value.ToString("MMM dd, yyyy HH:mm")
                            </small>
                        }
                    </div>
                </div>
            </div>

            <form method="post" class="mt-3">
                <input type="hidden" asp-for="Todo.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>