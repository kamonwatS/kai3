@page
@model TodoApp.Pages.Todos.CreateModel
@{
    ViewData["Title"] = "Create Todo";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>Create New Todo</h1>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Todo.Title" class="form-label"></label>
                    <input asp-for="Todo.Title" class="form-control" placeholder="Enter todo title" />
                    <span asp-validation-for="Todo.Title" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Todo.Description" class="form-label"></label>
                    <textarea asp-for="Todo.Description" class="form-control" rows="3" placeholder="Enter description (optional)"></textarea>
                    <span asp-validation-for="Todo.Description" class="text-danger"></span>
                </div>
                
                <div class="form-check mb-3">
                    <input asp-for="Todo.IsCompleted" class="form-check-input" type="checkbox" />
                    <label asp-for="Todo.IsCompleted" class="form-check-label">
                        Mark as completed
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}