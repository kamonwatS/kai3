@page
@model TodoApp.Pages.Todos.EditModel
@{
    ViewData["Title"] = "Edit Todo";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1>Edit Todo</h1>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Todo.Id" />
                <input type="hidden" asp-for="Todo.CreatedAt" />
                
                <div class="form-group mb-3">
                    <label asp-for="Todo.Title" class="form-label"></label>
                    <input asp-for="Todo.Title" class="form-control" />
                    <span asp-validation-for="Todo.Title" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Todo.Description" class="form-label"></label>
                    <textarea asp-for="Todo.Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Todo.Description" class="text-danger"></span>
                </div>
                
                <div class="form-check mb-3">
                    <input asp-for="Todo.IsCompleted" class="form-check-input" type="checkbox" />
                    <label asp-for="Todo.IsCompleted" class="form-check-label">
                        Completed
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}